<main class="wide-container" id="admin">
    <nav>
        <ul>
            <li>
                <input type="radio" name="admin-nav" id="users-nav" checked>
                <label for="users-nav">
                    Users
                </label>
            </li>
            <li>
                <input type="radio" name="admin-nav" id="messages-nav">
                <label for="messages-nav">
                    Messages
                </label>
            </li>
            <li>
                <input type="radio" name="admin-nav" id="settings-nav">
                <label for="settings-nav">
                    Settings
                </label>
            </li>
        </ul>
    </nav>
    <section>
        <div style="display: none;" id="userslist">
            <% users.forEach(user=> { %>
                <% if (user.status=="active" ) { %>


                    <div class="user">

                        <p>
                            <%= `${user.firstName} ${user.lastName}` %>
                        </p>

                        <div>
                            <p>
                                <%= `${user.balance} ` %>
                            </p>
                        </div>


                    </div>
                    <% } %>
                        <% }) %>

        </div>
        <div id="messages">
            <% users.forEach(user=> { %>
                <% if (user.status=="active" ) { %>


                    <div class="message">
                        <div>
                            <p>
                                <%= `${user.firstName} ${user.lastName}` %>
                            </p>


                            <p>
                                <!-- THIS SHOUD BE TIMESTAMP -->
                                <%= `${user.balance} ` %>
                            </p>
                        </div>
                        <div class="content">
                            <p>
                                <%= `${user.messages.length !=0 ? user.messages[user.messages.length-1].body : "" }` %>
                            </p>


                            <p>
                                <!-- THIS SHOUD BE NUMBER OF MESSAGES -->
                                <%= `${user.balance} ` %>
                            </p>
                        </div>


                    </div>
                    <% } %>
                        <% }) %>

        </div>
    </section>
</main>